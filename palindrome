#include<iostream>
using namespace std ; 
int main(){
    int n;
    cout<<"enter the length of array"<<endl;
    cin>>n;
char a[n];
cout<<"enter the charcter array"<<endl;
cin>>a;
cout<<"your array is :"<<a<<endl;
bool flag=false;
for (int i = 0; i <n; i++)
{
  if (a[i]==a[n-1-i])
  {
    flag=true;
  }
  
}
if (flag)
{
   cout<<"given WORD is palandrom"<<endl;
}
else{
    cout<<"its not the palandrom"<<endl;
}
return 0;
}
